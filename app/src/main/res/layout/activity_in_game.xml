<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/gray_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inGameActivity.InGameActivity">
    <ir.boardbazi.findaspy.FarBoldTv
            android:textColor="@color/colorWhite"
            android:background="@drawable/wood_bg"
            android:gravity="center"
            android:textSize="@dimen/text_h3"
            android:text="نکته اخلاقی"
            android:layout_width="0dp"
            android:layout_height="@dimen/extrim_big_margin"
            android:id="@+id/point_tv"
            app:layout_constraintStart_toEndOf="@+id/setting_img" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/exit_img"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/wood_setting"
            android:id="@+id/setting_img"
            app:layout_constraintTop_toTopOf="@+id/point_tv" app:layout_constraintBottom_toBottomOf="@+id/point_tv"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/wood_close"
            android:id="@+id/exit_img"
            app:layout_constraintTop_toTopOf="@+id/point_tv" app:layout_constraintBottom_toBottomOf="@+id/point_tv"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="1:1"/>
    <ir.boardbazi.findaspy.FarBoldTv
            android:text=":52"
            android:textSize="@dimen/text_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_tv"
            app:layout_constraintStart_toEndOf="@+id/minute_tv" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/point_tv"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/second_tv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/recyclerView"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/time"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/second_tv" app:layout_constraintBottom_toBottomOf="@+id/second_tv"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@+id/second_tv" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"/>
    <ir.boardbazi.findaspy.FarBoldTv
            android:textSize="@dimen/text_h3"
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minute_tv"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/second_tv"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/point_tv"/>


</android.support.constraint.ConstraintLayout>