<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="@dimen/dp54"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_bg">


    <ir.smilegame.findthespy.FarBoldTv
            android:id="@+id/newOptiontv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_h4"
            app:layout_constraintBottom_toTopOf="@+id/newOptionBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TextView" />

    <ir.smilegame.findthespy.FarBoldTv
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/newOptionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_h4"
            android:text="ادامه"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/wood_btn_bg"
            app:layout_constraintTop_toBottomOf="@+id/newOptiontv"
            tools:text="TextView" />


</androidx.constraintlayout.widget.ConstraintLayout>