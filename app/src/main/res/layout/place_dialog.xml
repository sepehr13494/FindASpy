<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:background="@drawable/result_bg"
                                             android:paddingRight="@dimen/extrim_big_margin"
                                             android:paddingLeft="@dimen/extrim_big_margin"
                                             android:paddingTop="@dimen/very_big_margin"
                                             android:paddingBottom="@dimen/very_big_margin"
                                             android:layout_height="match_parent">


    <ir.boardbazi.findaspy.FarBoldTv
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_h3"
