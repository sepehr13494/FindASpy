<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ir.smilegame.findthespy.FarBoldTv
            android:textSize="@dimen/text_h3"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/edittext"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/mines_btn"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/plus_btn"
            app:layout_constraintDimensionRatio="1:1" android:layout_marginEnd="4dp" android:layout_marginStart="4dp"/>
    <Button
            android:background="@drawable/count_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/plus_btn" app:layout_constraintStart_toEndOf="@+id/edittext"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"
    />
    <Button
            android:rotation="180"
            android:background="@drawable/count_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/mines_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/edittext"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
</androidx.constraintlayout.widget.ConstraintLayout>